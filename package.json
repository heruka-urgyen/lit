{
  "name": "@heruka_urgyen/lit",
  "version": "0.1.2",
  "description": "interactive git tools",
  "main": "src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "lit": "lit-cli.js"
  },
  "scripts": {
    "blt": "npm run build && npm run test && npm run lint-src",
    "lt": "npm run test && npm run lint-test",
    "status": "node lit-cli.js status",
    "build": "parcel build src/commands/status/index.js --out-dir dist/status --target node",
    "dev": "concurrently --raw 'nodemon --watch src --exec npm run blt' 'nodemon --watch test --exec npm run lt'",
    "lint-src": "eslint src .eslintrc.js",
    "lint-test": "eslint test .eslintrc.js",
    "test": "nyc ava --verbose",
    "coverage": "nyc --reporter=lcov --reporter=text ava"
  },
  "keywords": [
    "interactive",
    "cli",
    "git",
    "tools",
    "react",
    "ink"
  ],
  "author": "Ilya Malyanov",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "ava": "^3.11.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "esm": "^3.2.25",
    "husky": "^4.2.5",
    "ink-testing-library": "^2.0.1",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "parcel": "^1.12.4",
    "sinon": "^9.0.3",
    "test-console": "^1.1.0"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cli-cursor": "^3.1.0",
    "ink": "^3.0.3",
    "ink-use-stdout-dimensions": "^1.0.5",
    "node-pty": "^0.9.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "strip-ansi": "^6.0.0"
  },
  "ava": {
    "require": [
      "esm",
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache"
  }
}
