{
  "name": "@heruka_urgyen/lit",
  "version": "0.4.1",
  "description": "interactive git tools",
  "main": "src/index.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "lit": "lit-cli.js"
  },
  "scripts": {
    "blt": "npm run build && npm run test && npm run lint-src",
    "lt": "npm run test && npm run lint-test",
    "status": "node lit-cli.js status",
    "log": "node lit-cli.js log",
    "diff": "node lit-cli.js diff",
    "build": "webpack",
    "dev": "concurrently --raw 'nodemon --watch src --exec npm run blt' 'nodemon --watch test --exec npm run lt'",
    "lint-src": "eslint src .eslintrc.js",
    "lint-test": "eslint test .eslintrc.js",
    "test": "nyc ava --verbose",
    "coverage": "nyc --reporter=lcov --reporter=text ava",
    "prepublish": "npm run build"
  },
  "keywords": [
    "interactive",
    "cli",
    "git",
    "tools",
    "react",
    "ink"
  ],
  "author": "Ilya Malyanov",
  "license": "GPL-3.0",
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "ava": "^3.11.1",
    "ava-fast-check": "^3.0.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-import-resolver-babel-module": "^5.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "esm": "^3.2.25",
    "fast-check": "^2.2.0",
    "husky": "^4.2.5",
    "ink-testing-library": "^2.0.1",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "regenerator-runtime": "^0.13.7",
    "sinon": "^9.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "ansi-to-json": "^1.0.15",
    "chalk": "^4.1.0",
    "cli-cursor": "^3.1.0",
    "ink": "^3.0.3",
    "ink-use-stdout-dimensions": "^1.0.5",
    "node-pty": "^0.9.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "slice-ansi": "^4.0.0",
    "strip-ansi": "^6.0.0"
  },
  "ava": {
    "require": [
      "esm",
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": [
      "istanbul",
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ]
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache"
  }
}
